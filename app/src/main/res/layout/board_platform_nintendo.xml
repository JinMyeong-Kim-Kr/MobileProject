<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_board_platform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60CBF6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_board_platform_title"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center"
            android:text="Nintendo"
            android:textColor="#60CBF6"
            android:textSize="18sp" />

        <View
            android:id="@+id/가로줄5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B9E6F8" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spn_nintendo"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint="검색어를 입력하세요"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_circle"
                android:text="검색"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <View
            android:id="@+id/가로줄2_nintendo"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B9E6F8" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_samplereview_nintendo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>