<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_board_platform_etc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60CBF6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TV_board_platform_title_etc"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="18sp" />

        <View
            android:id="@+id/가로줄5_etc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B9E6F8" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_etc"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/ET_search_etc"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint="검색어를 입력하세요"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/BTN_search_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_circle"
                android:text="검색"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <View
            android:id="@+id/가로줄2_etc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B9E6F8" />

        <Button
            android:id="@+id/BTN_samplereview_etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>

</RelativeLayout>