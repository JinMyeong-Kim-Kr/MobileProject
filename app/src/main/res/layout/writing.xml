<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_writing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_writing_platform"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/layout_writingcircle"
                android:gravity="center"
                android:text="플랫폼"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spn_writing_platform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foregroundTint="#60CBF6"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <View
            android:id="@+id/가로줄5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#60CBF6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_writing_title"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="4"
                android:background="@drawable/layout_writingcircle"
                android:gravity="center"
                android:text="제목"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_writing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="제목을 입력하세요"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <View
            android:id="@+id/가로줄3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#60CBF6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_writing_gamename"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="4"
                android:background="@drawable/layout_writingcircle"
                android:gravity="center"
                android:text="게임명"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_writing_gamename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="게임명을 입력하세요"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <View
            android:id="@+id/가로줄4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#60CBF6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_playtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="플레이타임"
                android:textColor="#60CBF6" />

            <ImageView
                android:id="@+id/iv_playtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/sample" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="#B9E6F8">

            <TextView
                android:id="@+id/tv_kindreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 종류" />

            <Spinner
                android:id="@+id/spn_kindreview"
                android:layout_width="168dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="23dp"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="217dp"
                android:text="평점" />

            <RatingBar
                android:id="@+id/rb_rating"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint=" #FFD966"
                android:progressTint=" #FFD966" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="319dp">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="298dp"
                android:layout_height="101dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="17dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="내용을 입력하세요"
                android:textColor="#000000"
                android:textColorHighlight="#00FFFFFF" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_above="@+id/btn_cancel"
                android:layout_alignTop="@+id/et_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="28dp"
                android:layout_toRightOf="@id/et_content"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:text="추가"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@id/et_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="-3dp"
                android:layout_toRightOf="@id/et_content"
                android:background="@drawable/btn_circle"
                android:gravity="center"
                android:text="취소"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/btn_circle"
                android:onClick="tv_SignupClicked"
                android:text="작성 완료"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>