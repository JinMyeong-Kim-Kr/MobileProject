<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_writing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E6F8"
    tools:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_writing_platform"
                        android:layout_width="420dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/layout_writingcircle"
                        android:gravity="center"
                        android:text="플랫폼"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spn_writing_platform"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:foregroundTint="#60CBF6"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </LinearLayout>

                <View
                    android:id="@+id/가로줄5"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#60CBF6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_writing_title"
                        android:layout_width="420dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="4"
                        android:background="@drawable/layout_writingcircle"
                        android:gravity="center"
                        android:text="제목"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/et_writing_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"
                        android:hint="제목을 입력하세요"
                        android:inputType="textPersonName"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <View
                    android:id="@+id/가로줄3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#60CBF6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_writing_gamename"
                        android:layout_width="420dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="4"
                        android:background="@drawable/layout_writingcircle"
                        android:gravity="center"
                        android:text="게임명"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/et_writing_gamename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"
                        android:hint="게임명을 입력하세요"
                        android:inputType="textPersonName"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <View
                    android:id="@+id/가로줄4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#60CBF6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="420dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="4"
                        android:background="@drawable/layout_writingcircle"
                        android:gravity="center"
                        android:text="평점"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RatingBar
                            android:id="@+id/rb_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginEnd="33dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:numStars="5"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/가로줄6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"

                    android:background="#60CBF6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_playtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:paddingRight="10dp"
                        android:text="플레이타임" />

                    <ImageView
                        android:id="@+id/iv_putplaytime"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/noimg" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:id="@+id/attr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/tv_kindreview1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:minHeight="10dp"
                            android:paddingLeft="10dp"
                            android:text="참신함"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/et_content1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kindreview1"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/layout_writingcircle"
                            android:ems="10"
                            android:hint="내용을 입력하세요"
                            android:minHeight="60dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:shadowColor="@color/Sky"
                            android:textColor="#000000"
                            android:textColorHighlight="#00FFFFFF" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attr2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/attr1"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/tv_kindreview2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:minHeight="10dp"
                            android:paddingLeft="10dp"
                            android:text="스토리"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/et_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kindreview2"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/layout_writingcircle"
                            android:ems="10"
                            android:hint="내용을 입력하세요"
                            android:minHeight="80dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="#000000"
                            android:textColorHighlight="#00FFFFFF" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attr3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/attr2"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/tv_kindreview3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:minHeight="10dp"
                            android:paddingLeft="10dp"
                            android:text="레벨디자인"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/et_content3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kindreview3"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/layout_writingcircle"
                            android:ems="10"
                            android:hint="내용을 입력하세요"
                            android:minHeight="80dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="#000000"
                            android:textColorHighlight="#00FFFFFF" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attr4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/attr3"
                        android:layout_marginTop="25dp">


                        <TextView
                            android:id="@+id/tv_kindreview4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:minHeight="10dp"
                            android:paddingLeft="10dp"
                            android:text="최적화"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/et_content4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kindreview4"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/layout_writingcircle"
                            android:ems="10"
                            android:hint="내용을 입력하세요"
                            android:minHeight="80dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="#000000"
                            android:textColorHighlight="#00FFFFFF" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attr5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/attr4"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/tv_kindreview5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:minHeight="10dp"
                            android:paddingLeft="10dp"
                            android:text="진입장벽"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/et_content5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kindreview5"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/layout_writingcircle"
                            android:ems="10"
                            android:hint="내용을 입력하세요"
                            android:minHeight="80dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="#000000"
                            android:textColorHighlight="#00FFFFFF" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/atr6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/attr5"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/tv_kindreview6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:minHeight="10dp"
                            android:paddingLeft="10dp"
                            android:text="그래픽"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/et_content6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kindreview6"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/layout_writingcircle"
                            android:ems="10"
                            android:hint="내용을 입력하세요"
                            android:minHeight="80dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="#000000"
                            android:textColorHighlight="#00FFFFFF" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attr7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/atr6"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/tv_kindreview7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:minHeight="10dp"
                            android:paddingLeft="10dp"
                            android:text="가격"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/et_content7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kindreview7"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/layout_writingcircle"
                            android:ems="10"
                            android:hint="내용을 입력하세요"
                            android:minHeight="80dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="#000000"
                            android:textColorHighlight="#00FFFFFF" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attr8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/attr7"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/tv_kindreview8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:minHeight="10dp"
                            android:paddingLeft="10dp"
                            android:text="기타"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/et_content8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kindreview8"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/layout_writingcircle"
                            android:ems="10"
                            android:hint="내용을 입력하세요"
                            android:minHeight="80dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="#000000"
                            android:textColorHighlight="#00FFFFFF" />

                    </RelativeLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/btn_circle"
                    android:onClick="tv_SignupClicked"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="작성 완료"
                    android:textColor="#FFFFFF" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>