<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_board_platform_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_imagecircle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pl_re_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="플랫폼"
                    android:textColor="#B9E6F8"
                    android:textSize="24dp" />

            </LinearLayout>

            <View
                android:id="@+id/가로줄8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#B9E6F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_imagecircle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_platform_review_title"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="제목"
                    android:textAlignment="center"
                    android:textColor="#60CBF6 "
                    android:textSize="24dp" />

                <View
                    android:id="@+id/세로줄"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#B9E6F8" />

                <TextView
                    android:id="@+id/tv_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="작성자"
                    android:textColor="#356577"
                    android:textSize="24sp" />

            </LinearLayout>

            <View
                android:id="@+id/가로줄9"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B9E6F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_platform_review_gamename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/btn_imagecircle"
                    android:text="게임명"
                    android:textAlignment="center"
                    android:textColor="#FFD966"
                    android:textSize="24dp" />

            </LinearLayout>

            <View
                android:id="@+id/가로줄10"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B9E6F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="평점"
                    android:textColor="#60CBF6 "
                    android:textSize="20sp" />

                <View
                    android:id="@+id/세로줄2"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#B9E6F8" />

                <RatingBar
                    android:id="@+id/rb_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />


            </LinearLayout>

            <View
                android:id="@+id/가로줄7"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B9E6F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_playtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="플레이 타임 및 평가" />

                <ImageView
                    android:id="@+id/iv_getplaytime"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/noimg" />
            </LinearLayout>

            <View
                android:id="@+id/가로줄11"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B9E6F8" />

            <View
                android:id="@+id/가로줄12"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B9E6F8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:baselineAligned="false">

                <RelativeLayout
                    android:id="@+id/attr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/tv_kindreview1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="10dp"
                        android:paddingLeft="10dp"
                        android:text="참신함"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_content1"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:layout_below="@id/tv_kindreview1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/layout_writingcircle"
                        android:ems="10"
                        android:minHeight="60dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:shadowColor="@color/Sky"
                        android:textColor="#000000"
                        android:textColorHighlight="#00FFFFFF" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attr1"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/tv_kindreview2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="10dp"
                        android:paddingLeft="10dp"
                        android:text="스토리"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_kindreview2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/layout_writingcircle"
                        android:ems="10"
                        android:minHeight="80dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#000000"
                        android:textColorHighlight="#00FFFFFF" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attr3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attr2"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/tv_kindreview3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="10dp"
                        android:paddingLeft="10dp"
                        android:text="레벨디자인"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_kindreview3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/layout_writingcircle"
                        android:ems="10"
                        android:minHeight="80dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#000000"
                        android:textColorHighlight="#00FFFFFF" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attr4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attr3"
                    android:layout_marginTop="25dp">


                    <TextView
                        android:id="@+id/tv_kindreview4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="10dp"
                        android:paddingLeft="10dp"
                        android:text="최적화"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_content4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_kindreview4"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/layout_writingcircle"
                        android:ems="10"
                        android:minHeight="80dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#000000"
                        android:textColorHighlight="#00FFFFFF" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attr5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attr4"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/tv_kindreview5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="10dp"
                        android:paddingLeft="10dp"
                        android:text="진입장벽"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/et_content5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_kindreview5"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/layout_writingcircle"
                        android:ems="10"
                        android:minHeight="80dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#000000"
                        android:textColorHighlight="#00FFFFFF" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/atr6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attr5"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/tv_kindreview6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="10dp"
                        android:paddingLeft="10dp"
                        android:text="그래픽"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_content6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_kindreview6"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/layout_writingcircle"
                        android:ems="10"
                        android:minHeight="80dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#000000"
                        android:textColorHighlight="#00FFFFFF" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attr7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/atr6"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/tv_kindreview7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="10dp"
                        android:paddingLeft="10dp"
                        android:text="가격"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_content7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_kindreview7"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/layout_writingcircle"
                        android:ems="10"
                        android:minHeight="80dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#000000"
                        android:textColorHighlight="#00FFFFFF" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attr8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attr7"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/tv_kindreview8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minHeight="10dp"
                        android:paddingLeft="10dp"
                        android:text="기타"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_content8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_kindreview8"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/layout_writingcircle"
                        android:ems="10"
                        android:minHeight="80dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#000000"
                        android:textColorHighlight="#00FFFFFF" />

                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/btn_circle"
                android:text="추천하기"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>