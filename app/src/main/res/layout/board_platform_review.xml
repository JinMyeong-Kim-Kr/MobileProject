<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_board_platform_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_imagecircle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pl_re_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="플랫폼"
                android:textColor="#B9E6F8"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center"
                android:text="플랫폼 명" />

        </LinearLayout>

        <View
            android:id="@+id/가로줄8"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#B9E6F8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_imagecircle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_platform_review_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="제목"
                android:textAlignment="center"
                android:textColor="#60CBF6 "
                android:textSize="24dp" />

        </LinearLayout>

        <View
            android:id="@+id/가로줄9"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B9E6F8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_platform_review_gamename"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/btn_imagecircle"
                android:text="게임명"
                android:textAlignment="center"
                android:textColor="#FFD966"
                android:textSize="24dp" />

        </LinearLayout>

        <View
            android:id="@+id/가로줄10"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B9E6F8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_playtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="플레이 타임 및 평가"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/sample" />
        </LinearLayout>

        <View
            android:id="@+id/가로줄11"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B9E6F8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:text="평점 : " />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="186dp"
                android:layout_marginTop="8dp"
                android:text="추천수 : " />

        </RelativeLayout>

        <View
            android:id="@+id/가로줄12"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B9E6F8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="343dp"
                android:text="평가 내용"
                android:textAlignment="center"
                android:textSize="50dp" />

            <Button
                android:id="@+id/btn_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_circle"
                android:text="평가하기/댓글달기"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>