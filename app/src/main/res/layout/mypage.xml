<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="마이 페이지"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/mp_chkid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="30dp"
        android:minWidth="50dp"
        android:visibility="visible" />

    <TableLayout
        android:id="@+id/mypage_table"
        android:layout_width="355dp"
        android:layout_height="224dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/whitecircle"
        android:baselineAligned="false">

        <TableRow
            android:id="@+id/layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mypage_Id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="아이디:"
                android:textColor="#60CBF6"
                android:textIsSelectable="false"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/mypage_IdShow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="id"
                android:textAlignment="center"
                android:textColor="#60CBF6"
                android:textSize="24dp"
                android:textStyle="normal" />

        </TableRow>

        <TableRow
            android:id="@+id/layout_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mypage_Id4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="닉네임:"
                android:textColor="#60CBF6 "
                android:textIsSelectable="false"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/mypage_IdShow2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="nickname"
                android:textAlignment="center"
                android:textColor="#60CBF6"
                android:textSize="24dp"
                android:textStyle="normal" />

        </TableRow>

        <TableRow
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mypage_Id5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="이메일:"
                android:textColor="#60CBF6 "
                android:textIsSelectable="false"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/mypage_Idshow3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:backgroundTint="#356577"
                android:ems="10"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:textColor="#60CBF6"
                android:textColorHighlight="#356577"
                android:textColorHint="#356577"
                android:textColorLink="#356577" />

        </TableRow>

        <TableRow
            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mypage_Id6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호:"
                android:textColor="#60CBF6 "
                android:textIsSelectable="false"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/mypage_Idshow4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:backgroundTint="#356577"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColor="#60CBF6"
                android:textColorHighlight="#356577"
                android:textColorHint="#356577"
                android:textColorLink="#356577" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/mypage_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="221dp"
        android:background="@drawable/btn_circle"
        android:text="수정"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

</RelativeLayout>